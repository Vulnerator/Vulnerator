                                                    FontSize="12"
                                                    Style="{StaticResource MetroFlatButton}"
                                                    TabIndex="9" />
                                        </Grid>
                                        <Label Content="Update Group List"
                                               Style="{DynamicResource styleSecondLevelHeader}" />
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="70" />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <Label HorizontalAlignment="Left"
                                                   VerticalAlignment="Top"
                                                   Content="Old Group:"
                                                   KeyboardNavigation.IsTabStop="False" />
                                            <ComboBox x:Name="updateGroupComboBox"
                                                      Grid.Column="1"
                                                      Margin="5,0,5,5"
                                                      HorizontalAlignment="Stretch"
                                                      VerticalAlignment="Top"
                                                      Controls:ControlsHelper.MouseOverBorderBrush="{DynamicResource AccentColorBrush}"
                                                      Controls:TextBoxHelper.ClearTextButton="True"
                                                      Controls:TextBoxHelper.Watermark="Existing Group"
                                                      DisplayMemberPath="GroupNameAndMacLevel"
                                                      IsEditable="False"
                                                      IsEnabled="{Binding IsEnabled}"
                                                      IsSynchronizedWithCurrentItem="False"
                                                      ItemsSource="{Binding Source={StaticResource SystemGroupListCollectionViewSource}}"
                                                      SelectedValuePath="GroupNameAndMacLevel"
                                                      TabIndex="10"
                                                      Text="{Binding SelectedSystemGroupToUpdate}" />
                                        </Grid>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="70" />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <Label HorizontalAlignment="Left"
                                                   VerticalAlignment="Top"
                                                   Content="New Name:"
                                                   KeyboardNavigation.IsTabStop="False" />
                                            <TextBox x:Name="updateGroupNewNameTextbox"
                                                     Grid.Column="1"
                                                     Margin="5,0,5,5"
                                                     HorizontalAlignment="Stretch"
                                                     VerticalAlignment="Top"
                                                     Controls:ControlsHelper.MouseOverBorderBrush="{DynamicResource AccentColorBrush}"
                                                     Controls:TextBoxHelper.Watermark="Select a group"
                                                     TabIndex="11"
                                                     Text="{Binding Text,
																	Converter={StaticResource ObtainFirstStringValue},
																	ElementName=updateGroupComboBox,
																	Mode=OneWay}"
                                                     TextWrapping="NoWrap" />
                                        </Grid>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="70" />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <Label HorizontalAlignment="Left"
                                                   VerticalAlignment="Top"
                                                   Content="New MAC:"
                                                   KeyboardNavigation.IsTabStop="False" />
                                            <ComboBox x:Name="updateGroupNewMacLevelTextbox"
                                                      Grid.Column="1"
                                                      Margin="5,0,5,5"
                                                      HorizontalAlignment="Stretch"
                                                      VerticalAlignment="Top"
                                                      Controls:ControlsHelper.MouseOverBorderBrush="{DynamicResource AccentColorBrush}"
                                                      Controls:TextBoxHelper.Watermark="Select a group"
                                                      DisplayMemberPath="MacLevelNumber"
                                                      IsEditable="True"
                                                      IsEnabled="{Binding IsEnabled}"
                                                      ItemsSource="{Binding MacLevelList}"
                                                      SelectedValuePath="MacLevelNumber"
                                                      TabIndex="12"
                                                      Text="{Binding Text,
																	 Converter={StaticResource ObtainSecondStringValue},
																	 ElementName=updateGroupComboBox,
																	 Mode=OneWay}" />
                                        </Grid>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <Button Width="{Binding ElementName=deleteContactsButton_Copy,
																	Path=ActualWidth}"
                                                    Margin="5,0,5,5"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Top"
                                                    Command="{Binding UpdateGroupCommand}"
                                                    Content="Update Group"
                                                    FontSize="12"
                                                    Style="{StaticResource MetroFlatButton}"
                                                    TabIndex="13">
                                                <Button.CommandParameter>
                                                    <MultiBinding Converter="{StaticResource UpdateSystemGroupConverter}">
                                                        <Binding ElementName="updateGroupNewNameTextbox"
                                                                 Path="Text" />
                                                        <Binding ElementName="updateGroupNewMacLevelTextbox"
                                                                 Path="Text" />
                                                    </MultiBinding>
                                                </Button.CommandParameter>
                                            </Button>
                                            <Button Grid.Column="1"
                                                    Width="{Binding ElementName=deleteContactsButton_Copy,
																	Path=ActualWidth}"
                                                    Margin="5,0,5,5"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Top"
                                                    Command="{Binding DeleteGroupCommand}"
                                                    Content="Delete Group"
                                                    FontSize="12"
                                                    Style="{StaticResource MetroFlatButton}"
                                                    TabIndex="14" />
                                        </Grid>
                                        <Label Content="Update System List"
                                               Style="{DynamicResource styleSecondLevelHeader}" />
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="70" />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <Label HorizontalAlignment="Left"
                                                   VerticalAlignment="Top"
                                                   Content="Old System:"
                                                   KeyboardNavigation.IsTabStop="False" />
                                            <ComboBox x:Name="updateSystemCombobox"
                                                      Grid.Column="1"
                                                      Margin="5,0,5,5"
                                                      HorizontalAlignment="Stretch"
                                                      VerticalAlignment="Top"
                                                      Controls:TextBoxHelper.ClearTextButton="True"
                                                      Controls:TextBoxHelper.Watermark="Existing System"
                                                      DisplayMemberPath="SystemGroupAndNameAndIp"
                                                      IsEditable="False"
                                                      IsEnabled="{Binding IsEnabled}"
                                                      IsSynchronizedWithCurrentItem="False"
                                                      ItemsSource="{Binding Source={StaticResource MonitoredSystemListForUpdatingCollectionViewSource}}"
                                                      TabIndex="15"
                                                      Text="{Binding SelectedContactSystemToUpdate}" />
                                        </Grid>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="70" />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <Label HorizontalAlignment="Left"
                                                   VerticalAlignment="Top"
                                                   Content="New Group:"
                                                   KeyboardNavigation.IsTabStop="False" />
                                            <ComboBox x:Name="updateSystemNewGroupComboBox"
                                                      Grid.Column="1"
                                                      Margin="5,0,5,5"
                                                      HorizontalAlignment="Stretch"
                                                      VerticalAlignment="Top"
                                                      Controls:ControlsHelper.MouseOverBorderBrush="{DynamicResource AccentColorBrush}"
                                                      Controls:TextBoxHelper.Watermark="Select a system"
                                                      DisplayMemberPath="GroupName"
                                                      IsEnabled="{Binding IsEnabled}"
                                                      IsSynchronizedWithCurrentItem="False"
                                                      ItemsSource="{Binding Source={StaticResource SystemGroupListForUpdatingCollectionViewSource}}"
                                                      TabIndex="16"
                                                      Text="{Binding Text,
																	 Converter={StaticResource ObtainFirstStringValue},
																	 ElementName=updateSystemCombobox,
																	 Mode=OneWay}" />
                                        </Grid>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="70" />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <Label HorizontalAlignment="Left"
                                                   VerticalAlignment="Top"
                                                   Content="New Name:"
                                                   KeyboardNavigation.IsTabStop="False" />
                                            <TextBox x:Name="updateSystemNewNameTextbox"
                                                     Grid.Column="1"
                                                     Margin="5,0,5,5"
                                                     HorizontalAlignment="Stretch"
                                                     VerticalAlignment="Top"
                                                     Controls:ControlsHelper.MouseOverBorderBrush="{DynamicResource AccentColorBrush}"
                                                     Controls:TextBoxHelper.Watermark="Select a system"
                                                     TabIndex="17"
                                                     Text="{Binding Text,
																	Converter={StaticResource ObtainSecondStringValue},
																	ElementName=updateSystemCombobox,
																	Mode=OneWay}"
                                                     TextWrapping="NoWrap" />
                                        </Grid>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="70" />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                        </Grid>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="70" />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <Label HorizontalAlignment="Left"
                                                   VerticalAlignment="Top"
                                                   Content="New IP:"
                                                   KeyboardNavigation.IsTabStop="False" />
                                            <TextBox x:Name="updateSystemNewIpTextbox"
                                                     Grid.Column="1"
                                                     Margin="5,0,5,5"
                                                     HorizontalAlignment="Stretch"
                                                     VerticalAlignment="Top"
                                                     Controls:ControlsHelper.MouseOverBorderBrush="{DynamicResource AccentColorBrush}"
                                                     Controls:TextBoxHelper.Watermark="Select a system"
                                                     DataContext="{Binding SelectedItem,
																		   ElementName=contactsDataGrid}"
                                                     TabIndex="18"
                                                     Text="{Binding Text,
																	Converter={StaticResource ObtainThirdStringValue},
																	ElementName=updateSystemCombobox,
																	Mode=OneWay}"
                                                     TextWrapping="NoWrap" />
                                        </Grid>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <Button Width="{Binding ElementName=deleteContactsButton_Copy,
																	Path=ActualWidth}"
                                                    Margin="5,0,5,5"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Top"
                                                    Command="{Binding UpdateSystemCommand}"
                                                    Content="Update System"
                                                    FontSize="12"
                                                    Style="{StaticResource MetroFlatButton}"
                                                    TabIndex="19">
                                                <Button.CommandParameter>
                                                    <MultiBinding Converter="{StaticResource UpdateSystemConverter}">
                                                        <Binding ElementName="updateSystemNewGroupComboBox"
                                                                 Path="Text" />
                                                        <Binding ElementName="updateSystemNewNameTextbox"
                                                                 Path="Text" />
                                                        <Binding ElementName="updateSystemNewIpTextbox"
                                                                 Path="Text" />
                                                    </MultiBinding>
                                                </Button.CommandParameter>
                                            </Button>
                                            <Button Grid.Column="1"
                                                    Width="{Binding ElementName=deleteContactsButton_Copy,
																	Path=ActualWidth}"
                                                    Margin="5,0,5,5"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Top"
                                                    Command="{Binding DeleteSystemCommand}"
                                                    Content="Delete System"
                                                    FontSize="12"
                                                    Style="{StaticResource MetroFlatButton}"
                                                    TabIndex="20" />
                                        </Grid>
                                    </StackPanel>
                                </ScrollViewer>
                                <Grid Grid.Row="1"
                                      Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <DataGrid x:Name="updateContactsDataGrid"
                                              Margin="5,0,5,5"
                                              AutoGenerateColumns="False"
                                              BorderBrush="#FFCCCCCC"
                                              BorderThickness="1"
                                              CanUserReorderColumns="True"
                                              CanUserResizeColumns="True"
                                              CanUserSortColumns="True"
                                              GridLinesVisibility="Horizontal"
                                              HorizontalGridLinesBrush="#FFCCCCCC"
                                              IsEnabled="{Binding IsEnabled}"
                                              ItemsSource="{Binding ContactList}"
                                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                                              SelectedItem="{Binding SelectedContact}"
                                              SelectionUnit="FullRow">
                                        <DataGrid.Columns>
                                            <DataGridCheckBoxColumn Width="1*"
                                                                    Binding="{Binding IsChecked,
																					  Mode=TwoWay,
																					  UpdateSourceTrigger=PropertyChanged}"
                                                                    ElementStyle="{DynamicResource MetroDataGridCheckBox}"
                                                                    Header="Select"
                                                                    IsReadOnly="False">
                                                <DataGridCheckBoxColumn.HeaderTemplate>
                                                    <DataTemplate>
                                                        <CheckBox x:Name="selectAllContactsCheckbox"
                                                                  Command="{Binding SelectCheckboxCommand}"
                                                                  CommandParameter="{Binding Name,
																							 RelativeSource={RelativeSource Self}}"
                                                                  Content="SELECT"
                                                                  Controls:ControlsHelper.MouseOverBorderBrush="{DynamicResource AccentColorBrush}"
                                                                  DataContext="{StaticResource MainWindowViewModel}"
                                                                  FontWeight="SemiBold"
                                                                  IsChecked="{Binding ContactsAreChecked,
																					  Mode=TwoWay,
																					  UpdateSourceTrigger=PropertyChanged}"
                                                                  IsEnabled="{Binding IsEnabled}" />
                                                    </DataTemplate>
                                                </DataGridCheckBoxColumn.HeaderTemplate>
                                            </DataGridCheckBoxColumn>
                                            <DataGridTemplateColumn Width="1*"
                                                                    Header="Name"
                                                                    SortMemberPath="ContactName">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBox ContextMenu="{DynamicResource TextBoxMetroContextMenu}"
                                                                 IsReadOnly="True"
                                                                 Style="{StaticResource styleTrimmingTextbox}"
                                                                 Text="{Binding ContactName}"
                                                                 TextWrapping="NoWrap"
                                                                 ToolTip="{Binding ContactName}" />
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTemplateColumn Width="1*"
                                                                    Header="Group"
                                                                    SortMemberPath="ContactGroupName">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBox ContextMenu="{DynamicResource TextBoxMetroContextMenu}"
                                                                 IsReadOnly="True"
                                                                 Style="{StaticResource styleTrimmingTextbox}"
                                                                 Text="{Binding ContactGroupName}"
                                                                 TextWrapping="NoWrap"
                                                                 ToolTip="{Binding ContactGroupName}" />
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTemplateColumn Width="1*"
                                                                    Header="System Name"
                                                                    SortMemberPath="ContactSystemName">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBox ContextMenu="{DynamicResource TextBoxMetroContextMenu}"
                                                                 IsReadOnly="True"
                                                                 Style="{StaticResource styleTrimmingTextbox}"
                                                                 Text="{Binding ContactSystemName}"
                                                                 TextWrapping="NoWrap"
                                                                 ToolTip="{Binding ContactSystemName}" />
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTemplateColumn Width="1*"
                                                                    Header="System IP"
                                                                    SortMemberPath="ContactSystemIp">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBox ContextMenu="{DynamicResource TextBoxMetroContextMenu}"
                                                                 IsReadOnly="True"
                                                                 Style="{StaticResource styleTrimmingTextbox}"
                                                                 Text="{Binding ContactSystemIp}"
                                                                 TextWrapping="NoWrap"
                                                                 ToolTip="{Binding ContactSystemIp}" />
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                    <Button x:Name="deleteContactsButton_Copy"
                                            Grid.Row="1"
                                            Margin="5,0,5,5"
                                            HorizontalAlignment="Right"
                                            Command="{Binding DeleteButtonsCommand}"
                                            CommandParameter="{Binding Name,
																	   RelativeSource={RelativeSource Self}}"
                                            Content="Delete Contact(s)"
                                            FontSize="12"
                                            IsEnabled="{Binding IsEnabled}"
                                            Style="{StaticResource MetroFlatButton}"
                                            TabIndex="21" />
                                </Grid>
                            </Grid>
                        </TabItem>
                    </Controls:MetroAnimatedSingleRowTabControl>
                </TabItem>
            </Controls:MetroAnimatedSingleRowTabControl>
            <StatusBar Grid.Row="1"
                       Height="35"
                       VerticalAlignment="Top"
                       Background="{DynamicResource ControlBackgroundBrush}"
                       BorderBrush="#FFCCCCCC"
                       BorderThickness="0,1,0,0">
                <StatusBarItem>
                    <Controls:ProgressRing Width="30"
                                           Height="30"
                                           Margin="0"
                                           Foreground="{DynamicResource AccentColorBrush}"
                                           Visibility="{Binding ProgressRingVisibility}" />
                </StatusBarItem>
                <StatusBarItem Height="35"
                               Margin="0"
                               VerticalAlignment="Top"
                               Content="{Binding ProgressLabelText}"
                               Foreground="{DynamicResource TextBrush}" />
            </StatusBar>
        </Grid>
    </Controls:MetroContentControl>
</Controls:MetroWindow>