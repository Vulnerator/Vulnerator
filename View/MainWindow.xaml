<Controls:MetroWindow x:Class="Vulnerator.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:dat="clr-namespace:System.Windows.Data;assembly=PresentationFramework"
                      xmlns:diag="clr-namespace:System.Diagnostics;assembly=WindowsBase"
                      xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
                      xmlns:v="clr-namespace:Vulnerator.View"
                      xmlns:vm="clr-namespace:Vulnerator.ViewModel"
                      x:Name="winMain"
                      Title="Vulnerator"
                      MinWidth="750"
                      MinHeight="300"
                      HorizontalContentAlignment="Stretch"
                      VerticalContentAlignment="Stretch"
                      DataContext="{StaticResource MainWindowViewModel}"
                      GlowBrush="{DynamicResource AccentColorBrush}"
                      BorderBrush="{DynamicResource AccentColorBrush}"
                      BorderThickness="1"
                      Icon="/Vulnerator;component/Resources/chart.ico"
                      KeyboardNavigation.TabNavigation="Continue"
                      ResizeMode="CanResize"
                      mc:Ignorable="d">

    <Controls:MetroWindow.Resources>
        <vm:MyXmlDataProvider x:Key="XmlConfig"
                              IsAsynchronous="False"
                              IsInitialLoadEnabled="True" />
        <vm:StringToBoolConverter x:Key="StringToBool" />
        <vm:CustomMultiValueConverter x:Key="CommandConverter" />
        <vm:StringSeparatorConverter x:Key="StringSeparator" />
        <vm:StringJoiningConverter x:Key="StringJoiner" />
        <vm:EmailTextLabelStringJoiner x:Key="EmailTextLabelJoiner" />
        <vm:EmailPersonnelLabelJoiner x:Key="EmailPersonnelLabelJoiner" />
        <vm:ContactInfoSeparatorConverter x:Key="ContactInfoStringSeparator" />
        <vm:ObtainFirstSplitStringValueConverter x:Key="ObtainFirstStringValue" />
        <vm:ObtainSecondSplitStringValueConverter x:Key="ObtainSecondStringValue" />
        <vm:ObtainThirdSplitStringValueConverter x:Key="ObtainThirdStringValue" />
        <vm:UpdateSystemGroupConverter x:Key="UpdateSystemGroupConverter" />
        <vm:UpdateSystemConverter x:Key="UpdateSystemConverter" />

        <v:AutoRefreshCollectionViewSource x:Key="SystemGroupListCollectionViewSource"
                                           Source="{Binding SystemGroupList}">
            <v:AutoRefreshCollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="GroupNameAndMacLevel" />
            </v:AutoRefreshCollectionViewSource.SortDescriptions>
        </v:AutoRefreshCollectionViewSource>

        <v:AutoRefreshCollectionViewSource x:Key="MonitoredSystemListCollectionViewSource"
                                           Source="{Binding MonitoredSystemList}">
            <v:AutoRefreshCollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="SystemNameAndIp" />
            </v:AutoRefreshCollectionViewSource.SortDescriptions>
        </v:AutoRefreshCollectionViewSource>

        <v:AutoRefreshCollectionViewSource x:Key="MonitoredSystemListForUpdatingCollectionViewSource"
                                           Source="{Binding MonitoredSystemListForUpdating}">
            <v:AutoRefreshCollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="SystemGroupAndNameAndIp" />
            </v:AutoRefreshCollectionViewSource.SortDescriptions>
        </v:AutoRefreshCollectionViewSource>

        <v:AutoRefreshCollectionViewSource x:Key="ContactTitleListCollectionViewSource"
                                           Source="{Binding ContactTitleList}">
            <v:AutoRefreshCollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="ContactTitleName" />
            </v:AutoRefreshCollectionViewSource.SortDescriptions>
        </v:AutoRefreshCollectionViewSource>

        <v:AutoRefreshCollectionViewSource x:Key="SystemGroupListForUpdatingCollectionViewSource"
                                           Source="{Binding SystemGroupListForUpdating}">
            <v:AutoRefreshCollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="GroupName" />
            </v:AutoRefreshCollectionViewSource.SortDescriptions>
        </v:AutoRefreshCollectionViewSource>
    </Controls:MetroWindow.Resources>

    <Controls:MetroWindow.IconTemplate>
        <DataTemplate>
            <Grid Width="{TemplateBinding Width}"
                  Height="{TemplateBinding Height}"
                  Margin="4,4,2,4"
                  Background="{DynamicResource IdealForegroundColorBrush}"
                  RenderOptions.BitmapScalingMode="HighQuality"
                  RenderOptions.EdgeMode="Aliased">
                <Grid.OpacityMask>
                    <VisualBrush Stretch="Uniform"
                                 Visual="{DynamicResource appbar_graph_bar}" />
                </Grid.OpacityMask>
            </Grid>
        </DataTemplate>
    </Controls:MetroWindow.IconTemplate>

    <Controls:MetroWindow.WindowButtonCommands>
        <Controls:WindowButtonCommands Template="{DynamicResource MahApps.Metro.Templates.WindowButtonCommands.Win10}" />
    </Controls:MetroWindow.WindowButtonCommands>

    <!--  Buttons at the top of the window for Theme and About  -->
    <Controls:MetroWindow.RightWindowCommands>
        <Controls:WindowCommands>
            <Button x:Name="bNews"
                    Command="{Binding HandleFlyoutsCommand}"
                    CommandParameter="{Binding Path=Content,
											   RelativeSource={RelativeSource Self}}"
                    Content="news" />
            <Button x:Name="bAbout"
                    Command="{Binding HandleFlyoutsCommand}"
                    CommandParameter="{Binding Path=Content,
											   RelativeSource={RelativeSource Self}}"
                    Content="about" />
            <Button x:Name="bTheme"
                    Command="{Binding HandleFlyoutsCommand}"
                    CommandParameter="{Binding Path=Content,
											   RelativeSource={RelativeSource Self}}"
                    Content="theme" />
        </Controls:WindowCommands>
    </Controls:MetroWindow.RightWindowCommands>

    <!--  Flyout Control  -->
    <Controls:MetroWindow.Flyouts>
        <Controls:FlyoutsControl>
            <Controls:Flyout x:Name="flyNews"
                             Height="Auto"
                             HorizontalAlignment="Left"
                             Header="News"
                             IsModal="True"
                             IsOpen="{Binding NewsFlyoutIsOpen}"
                             IsPinned="False"
                             Position="Top"
                             Theme="Adapt">
                
            </Controls:Flyout>
            <!--  About Flyout  -->
            <Controls:Flyout x:Name="flyAbout"
                             Height="Auto"
                             HorizontalAlignment="Left"
                             Header="About"
                             IsModal="True"
                             IsOpen="{Binding AboutFlyoutIsOpen}"
                             IsPinned="False"
                             Position="Left"
                             Theme="Adapt">
                <StackPanel VerticalAlignment="Stretch"
                            HorizontalAlignment="Stretch"
                            Width="Auto"
                            Height="Auto"
                            Margin="5,0">
                    <Grid Width="Auto"
                          Height="Auto"
                          HorizontalAlignment="Left"
                          Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Image Grid.RowSpan="3"
                               Height="80"
                               Margin="0,5,0,0"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Stretch"
                               Source="pack://application:,,,/Resources/chart.ico" />
                        <Label Grid.Column="1"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               Content="Vulnerator"
                               Style="{StaticResource styleDescriptionHeader}" />
                        <TextBlock Name="tbKcs"
                                   Margin="5,0"
                                   Grid.Column="1"
                                   Grid.Row="2"
                                   Style="{StaticResource styleHyperlinkTextBlock}"
                                   Text="Maintained by Kuchta Creative Services, LLC"
                                   TextWrapping="NoWrap"
                                   VerticalAlignment="Top">
                            <TextBlock.InputBindings>
                                <MouseBinding Command="{Binding AboutLinksCommand}"
                                              CommandParameter="{Binding ElementName=tbKcs,
																		 Path=Name}"
                                              MouseAction="LeftClick" />
                            </TextBlock.InputBindings>
                        </TextBlock>
                        <Grid Grid.Row="1"
                              Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Label HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Content="Version:"
                                   Style="{StaticResource styleSecondLevelHeader}" />
                            <Label Grid.Column="1"
                                   Width="Auto"
                                   Height="Auto"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Content="{Binding FileVersion}"
                                   Style="{StaticResource styleSecondLevelHeader}" />
                        </Grid>
                    </Grid>
                    <Label Height="30"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="Credits"
                           Style="{StaticResource styleSecondLevelHeader}" />
                    <TextBlock Name="tbAlex"
                               Margin="5,0"
                               Style="{StaticResource styleHyperlinkTextBlock}"
                               Text="Alex Kuchta - Redesign, ACAS Integration"
                               TextWrapping="NoWrap">
                        <TextBlock.InputBindings>
                            <MouseBinding Command="{Binding AboutLinksCommand}"
                                          CommandParameter="{Binding ElementName=tbAlex,
																		 Path=Name}"
                                          MouseAction="LeftClick" />
                        </TextBlock.InputBindings>
                    </TextBlock>
                    <TextBlock Name="tbJeffV"
                               Margin="5,0"
                               Style="{StaticResource styleHyperlinkTextBlock}"
                               Text="Jeff Vanerwegen - WASSP, SCAP, CKL Integration"
                               TextWrapping="NoWrap">
                        <TextBlock.InputBindings>
                            <MouseBinding Command="{Binding AboutLinksCommand}"
                                          CommandParameter="{Binding ElementName=tbJeffV,
																		 Path=Name}"
                                          MouseAction="LeftClick" />
                        </TextBlock.InputBindings>
                    </TextBlock>
                    <TextBlock Name="tbRick"
                               Margin="5,0"
                               Style="{StaticResource styleHyperlinkTextBlock}"
                               Text="Rick Murphy - POA&amp;M Integration"
                               TextWrapping="NoWrap">
                        <TextBlock.InputBindings>
                            <MouseBinding Command="{Binding AboutLinksCommand}"
                                          CommandParameter="{Binding ElementName=tbRick,
																		 Path=Name}"
                                          MouseAction="LeftClick" />
                        </TextBlock.InputBindings>
                    </TextBlock>
                    <TextBlock Name="tbJeffP"
                               Margin="5,0"
                               Style="{StaticResource styleHyperlinkTextBlock}"
                               Text="Jeff Purcell - Creator"
                               TextWrapping="NoWrap">
                        <TextBlock.InputBindings>
                            <MouseBinding Command="{Binding AboutLinksCommand}"
                                          CommandParameter="{Binding ElementName=tbJeffP,
																		 Path=Name}"
                                          MouseAction="LeftClick" />
                        </TextBlock.InputBindings>
                    </TextBlock>
                    <Label HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="Description"
                           Style="{StaticResource styleSecondLevelHeader}" />
                    <TextBlock Margin="5,0"
                               VerticalAlignment="Top"
                               Text="Aggregates data from the following sources: &#10;- ACAS CSV / Nessus Reports &#10;- DISA STIG Viewer Checklists &#10;- WASSP Mitigation / XACTA Reports &#10;- SCC / ACAS SCAP Benchmarks"
                               TextWrapping="Wrap" />
                    <Label HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="Useful Links"
                           Style="{StaticResource styleSecondLevelHeader}" />
                    <TextBlock Name="tbProject"
                               Margin="5,0"
                               Style="{StaticResource styleHyperlinkTextBlock}"
                               Text="Project Page"
                               TextWrapping="NoWrap">
                        <TextBlock.InputBindings>
                            <MouseBinding Command="{Binding AboutLinksCommand}"
                                          CommandParameter="{Binding ElementName=tbProject,
																		 Path=Name}"
                                          MouseAction="LeftClick" />
                        </TextBlock.InputBindings>
                    </TextBlock>
                    <TextBlock Name="tbWiki"
                               Margin="5,0"
                               Style="{StaticResource styleHyperlinkTextBlock}"
                               Text="Wiki Page"
                               TextWrapping="NoWrap">
                        <TextBlock.InputBindings>
                            <MouseBinding Command="{Binding AboutLinksCommand}"
                                          CommandParameter="{Binding ElementName=tbWiki,
																		 Path=Name}"
                                          MouseAction="LeftClick" />
                        </TextBlock.InputBindings>
                    </TextBlock>
                    <TextBlock Name="tbRepo"
                               Margin="5,0"
                               Style="{StaticResource styleHyperlinkTextBlock}"
                               Text="GitHub Repository"
                               TextWrapping="NoWrap">
                        <TextBlock.InputBindings>
                            <MouseBinding Command="{Binding AboutLinksCommand}"
                                          CommandParameter="{Binding ElementName=tbRepo,
																		 Path=Name}"
                                          MouseAction="LeftClick" />
                        </TextBlock.InputBindings>
                    </TextBlock>
                </StackPanel>
            </Controls:Flyout>
            <!--  Theme Manager Flyout  -->
            <Controls:Flyout x:Name="flyThemeManager"
                             Height="147"
                             HorizontalAlignment="Left"
                             Header="Theme"
                             IsModal="True"
                             IsOpen="{Binding ThemeFlyoutIsOpen}"
                             IsPinned="False"
                             Position="Bottom"
                             Theme="Adapt">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height=".75*" />
                        <RowDefinition />
                        <RowDefinition Height=".75*" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0"
                                Width="164"
                                Height="37"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top">
                        <Label Content="Background Color"
                               Style="{StaticResource styleSecondLevelHeader}" />
                    </StackPanel>
                    <StackPanel Grid.Row="1"
                                Width="164"
                                Height="83"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top">
                        <ComboBox x:Name="comboboxTheme"
                                  Width="159"
                                  Margin="5,5,0,0"
                                  HorizontalAlignment="Left">
                            <ComboBoxItem x:Name="comboboxitemLightTheme"
                                          HorizontalAlignment="Left"
                                          Content="Light Theme"
                                          Selected="ChangeTheme" />
                            <ComboBoxItem x:Name="comboboxitemDarkTheme"
                                          HorizontalAlignment="Left"
                                          Content="Dark Theme"
                                          Selected="ChangeTheme" />
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Grid.Row="2"
                                Width="544"
                                Height="37"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top">
                        <Label Content="Accent Color"
                               Style="{StaticResource styleSecondLevelHeader}" />
                    </StackPanel>
                    <StackPanel Grid.Row="3"
                                Height="38"
                                Orientation="Horizontal">
                        <Rectangle x:Name="rectPink"
                                   Width="26"
                                   Height="26"
                                   Margin="5,0,0,0"
                                   Fill="#FFF472D0"
                                   MouseLeftButtonDown="SetAccentColor"
                                   Stroke="Transparent"
                                   ToolTip="Pink" />
                        <Rectangle x:Name="rectMagenta"
                                   Width="26"
                                   Height="26"
                                   Margin="5,0,0,0"
                                   Fill="#FFD80073"
                                   MouseLeftButtonDown="SetAccentColor"
                                   Stroke="Transparent"
                                   ToolTip="Magenta" />
                        <Rectangle x:Name="rectCrimson"
                                   Width="26"
                                   Height="26"
                                   Margin="5,0,0,0"
                                   Fill="#FFA20025"
                                   MouseLeftButtonDown="SetAccentColor"
                                   Stroke="Transparent"
                                   ToolTip="Crimson" />
                        <Rectangle x:Name="rectRed"
                                   Width="26"
                                   Height="26"
                                   Margin="5,0,0,0"
                                   Fill="#FFE51400"
                                   MouseLeftButtonDown="SetAccentColor"
                                   Stroke="Transparent"
                                   ToolTip="Red" />
                        <Rectangle x:Name="rectOrange"
                                   Width="26"
                                   Height="26"
                                   Margin="5,0,0,0"
                                   Fill="#FFFA6800"
                                   MouseLeftButtonDown="SetAccentColor"
                                   Stroke="Transparent"
                                   ToolTip="Orange" />
                        <Rectangle x:Name="rectAmber"
                                   Width="26"
                                   Height="26"
                                   Margin="5,0,0,0"
                                   Fill="#FFF0A30A"
                                   MouseLeftButtonDown="SetAccentColor"
                                   Stroke="Transparent"
                                   ToolTip="Amber" />
                        <Rectangle x:Name="rectYellow"
                                   Width="26"
                                   Height="26"
                                   Margin="5,0,0,0"
                                   Fill="#FFE3C800"
                                   MouseLeftButtonDown="SetAccentColor"
                                   Stroke="Transparent"
                                   ToolTip="Yellow" />
                        <Rectangle x:Name="rectSienna"
                                   Width="26"
                                   Height="26"
                                   Margin="5,0,0,0"
                                   Fill="#FFA0522D"
                                   MouseLeftButtonDown="SetAccentColor"
                                   Stroke="Transparent"
                                   ToolTip="Sienna" />
                        <Rectangle x:Name="rectBrown"
                                   Width="26"
                                   Height="26"
                                   Margin="5,0,0,0"
                                   Fill="#FF825A2C"
                                   MouseLeftButtonDown="SetAccentColor"
                                   Stroke="Transparent"
                                   ToolTip="Brown" />
                        <Rectangle x:Name="rectOlive"
                                   Width="26"
                                   Height="26"
                                   Margin="5,0,0,0"
                                   Fill="#FF6D8764"
                                   MouseLeftButtonDown="SetAccentColor"
                                   Stroke="Transparent"
                                   ToolTip="Olive" />
                        <Rectangle x:Name="rectLime"
                                   Width="26"
                                   Height="26"
                                   Margin="5,0,0,0"
                                   Fill="#FFA4C400"
                                   MouseLeftButtonDown="SetAccentColor"
                                   Stroke="Transparent"
                                   ToolTip="Lime" />
                        <Rectangle x:Name="rectGreen"
                                   Width="26"
                                   Height="26"
                                   Margin="5,0,0,0"
                                   Fill="#FF60A917"
                                   MouseLeftButtonDown="SetAccentColor"
                                   Stroke="Transparent"
                                   ToolTip="Green" />
                        <Rectangle x:Name="rectEmerald"
                                   Width="26"
                                   Height="26"
                                   Margin="5,0,0,0"
                                   Fill="#FF008A00"
                                   MouseLeftButtonDown="SetAccentColor"
                                   Stroke="Transparent"
                                   ToolTip="Emerald" />
                        <Rectangle x:Name="rectTeal"
                                   Width="26"
                                   Height="26"
                                   Margin="5,0,0,0"
                                   Fill="#FF00ABA9"
                                   MouseLeftButtonDown="SetAccentColor"
                                   Stroke="Transparent"
                                   ToolTip="Teal" />
                        <Rectangle x:Name="rectCyan"
                                   Width="26"
                                   Height="26"
                                   Margin="5,0,0,0"
                                   Fill="#FF1BA1E2"
                                   MouseLeftButtonDown="SetAccentColor"
                                   Stroke="Transparent"
                                   ToolTip="Cyan" />
                        <Rectangle x:Name="rectSteel"
                                   Width="26"
                                   Height="26"
                                   Margin="5,0,0,0"
                                   Fill="#FF647687"
                                   MouseLeftButtonDown="SetAccentColor"
                                   Stroke="Transparent"
                                   ToolTip="Steel" />
                        <Rectangle x:Name="rectCobalt"
                                   Width="26"
                                   Height="26"
                                   Margin="5,0,0,0"
                                   Fill="#FF0050EF"
                                   MouseLeftButtonDown="SetAccentColor"
                                   Stroke="Transparent"
                                   ToolTip="Cobalt" />
                        <Rectangle x:Name="rectIndigo"
                                   Width="26"
                                   Height="26"
                                   Margin="5,0,0,0"
                                   Fill="#FF6A00FF"
                                   MouseLeftButtonDown="SetAccentColor"
                                   Stroke="Transparent"
                                   ToolTip="Indigo" />
                        <Rectangle x:Name="rectViolet"
                                   Width="26"
                                   Height="26"
                                   Margin="5,0,0,0"
                                   Fill="#FFAA00FF"
                                   MouseLeftButtonDown="SetAccentColor"
                                   Stroke="Transparent"
                                   ToolTip="Violet" />
                        <Rectangle x:Name="rectMauve"
                                   Width="26"
                                   Height="26"
                                   Margin="5,0,0,0"
                                   Fill="#FF76608A"
                                   MouseLeftButtonDown="SetAccentColor"
                                   Stroke="Transparent"
                                   ToolTip="Mauve" />
                    </StackPanel>
                </Grid>
            </Controls:Flyout>
            <!--  Mitigations.txt Import Flyout  -->
            <Controls:Flyout x:Name="flyMitigations"
                             Width="258"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             Header="Import"
                             IsModal="True"
                             IsOpen="{Binding ImportFlyoutIsOpen}"
                             IsPinned="False"
                             Position="Right"
                             Theme="Adapt">
                <Grid Width="258"
                      Height="297"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Top">
                    <Label Width="242"
                           Height="39"
                           Margin="7,62,9,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           Content="Mitigation Group"
                           Style="{StaticResource ResourceKey=styleDescriptionHeader}" />
                    <ComboBox x:Name="comboboxImportGroup"
                              Height="26"
                              Margin="13,101,9,0"
                              VerticalAlignment="Top"
                              Controls:TextBoxHelper.ClearTextButton="True"
                              Controls:TextBoxHelper.Watermark="Group Name"
                              DisplayMemberPath="SystemGroupName"
                              IsEditable="True"
                              IsEnabled="{Binding IsEnabled}"
                              ItemsSource="{Binding SystemGroupList}"
                              Text="{Binding AddMitigationGroupName}" />
                    <Button x:Name="bMitBrowse"
                            Width="116"
                            Height="26"
                            Margin="133,31,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Command="{Binding MitigationsDotTxtBrowseDialogCommand}"
                            Content="Browse"
                            FontSize="12"
                            Style="{StaticResource MetroFlatButton}" />
                    <TextBox x:Name="tbMitLocation"
                             Height="23"
                             Margin="13,0,9,0"
                             VerticalAlignment="Top"
                             Controls:ControlsHelper.MouseOverBorderBrush="{DynamicResource AccentColorBrush}"
                             Controls:TextBoxHelper.Watermark="&quot;Mitigations.txt&quot; Location"
                             Text="{Binding ImportMitigationTextFileName,
											Mode=TwoWay,
											UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap" />
                    <Button x:Name="bMitTxtImport"
                            Height="26"
                            Margin="133,233,9,0"
                            VerticalAlignment="Top"
                            Command="{Binding ImportMitigationsCommand}"
                            Content="Import"
                            FontSize="12"
                            Style="{StaticResource MetroFlatButton}" />
                    <Label Width="242"
                           Height="39"
                           Margin="7,163,9,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           Content="Vulnerability Status"
                           Style="{StaticResource ResourceKey=styleDescriptionHeader}" />
                    <ComboBox x:Name="comboboxImportStatus"
                              Height="26"
                              Margin="13,202,9,0"
                              VerticalAlignment="Top"
                              Controls:TextBoxHelper.ClearTextButton="True"
                              Controls:TextBoxHelper.Watermark="Status"
                              DisplayMemberPath="Item"
                              IsEditable="True"
                              ItemsSource="{Binding StatusItemList}"
                              SelectedValue="{Binding AddMitigationStatus}"
                              SelectedValuePath="Item" />
                    <ComboBox Width="236"
                              Height="26"
                              Margin="13,132,0,0"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Top"
                              Controls:ControlsHelper.MouseOverBorderBrush="{DynamicResource AccentColorBrush}"
                              Controls:TextBoxHelper.ClearTextButton="True"
                              Controls:TextBoxHelper.Watermark="Group MAC Level"
                              DisplayMemberPath="MacLevelNumber"
                              IsEditable="True"
                              IsEnabled="{Binding IsEnabled}"
                              ItemsSource="{Binding MacLevelList}"
                              SelectedValue="{Binding AddMitigationMacLevel}"
                              SelectedValuePath="MacLevelNumber"
                              TabIndex="6" />
                </Grid>
            </Controls:Flyout>
            <!--  IAVM Compliance Advanced Settings Flyout  -->
            <Controls:Flyout x:Name="flyIavmSettings"
                             Width="1125.5"
                             HorizontalAlignment="Right"
                             VerticalAlignment="Top"
                             Header="Options"
                             IsModal="True"
                             IsOpen="{Binding AdvancedFlyoutIsOpen}"
                             IsPinned="False"
                             Position="Left"
                             Theme="Adapt">
                <Grid Height="Auto"
                      Margin="5,0,0,0">
                    <Label Width="242"
                           Height="41"
                           VerticalAlignment="Top"
                           Content="IAVM Age Filters"
                           KeyboardNavigation.IsTabStop="False"
                           Style="{StaticResource styleDescriptionHeader}" />
                    <Label Width="232"
                           Height="31"
                           Margin="0,41,0,0"
                           VerticalAlignment="Top"
                           Content="Age Filter One"
                           KeyboardNavigation.IsTabStop="False"
                           Style="{StaticResource styleSecondLevelHeader}" />
                    <Label Width="232"
                           Height="31"
                           Margin="0,94,0,0"
                           VerticalAlignment="Top"
                           Content="Age Filter Two"
                           KeyboardNavigation.IsTabStop="False"
                           Style="{StaticResource styleSecondLevelHeader}" />
                    <Label Width="232"
                           Height="31"
                           Margin="0,147,0,0"
                           VerticalAlignment="Top"
                           Content="Age Filter Three"
                           KeyboardNavigation.IsTabStop="False"
                           Style="{StaticResource styleSecondLevelHeader}" />
                    <Label Width="232"
                           Height="31"
                           Margin="0,204,0,0"
                           VerticalAlignment="Top"
                           Content="Age Filter Four"
                           KeyboardNavigation.IsTabStop="False"
                           Style="{StaticResource styleSecondLevelHeader}" />
                    <Slider x:Name="iavmFilterOne"
                            Width="149"
                            Height="22"
                            Margin="5,76,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            IsSnapToTickEnabled="True"
                            Maximum="120"
                            Minimum="0"
                            TickFrequency="1"
                            Value="{Binding InnerText,
											Mode=OneTime,
											Source={StaticResource XmlConfig},
											XPath=iavmEmailOptionsFlyout/iavmFilterOne}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="PreviewMouseUp">
                                <i:InvokeCommandAction Command="{Binding UpdateDictionaryCommand}">
                                    <i:InvokeCommandAction.CommandParameter>
