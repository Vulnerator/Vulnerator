                                </Grid>
                            </Label>
                        </Expander.Header>
                    </Expander>
                    <Expander Grid.Column="3"
                              Background="{DynamicResource WindowBackgroundBrush}"
                              BorderThickness="0"
                              ExpandDirection="Right">
                        <Expander.Header>
                            <Label Foreground="{DynamicResource LabelTextBrush}">
                                <Label.LayoutTransform>
                                    <RotateTransform Angle="90" />
                                </Label.LayoutTransform>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <IconPacks:PackIconMaterialLight Grid.Column="0"
                                                                     Margin="5"
                                                                     HorizontalAlignment="Center"
                                                                     VerticalAlignment="Center"
                                                                     Kind="CloudDownload">
                                        <IconPacks:PackIconMaterialLight.LayoutTransform>
                                            <RotateTransform Angle="-90" />
                                        </IconPacks:PackIconMaterialLight.LayoutTransform>
                                    </IconPacks:PackIconMaterialLight>
                                    <TextBlock Grid.Column="1"
                                               Margin="5,0"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Foreground="{DynamicResource LabelTextBrush}"
                                               Text="Reporting"
                                               TextTrimming="CharacterEllipsis" />
                                </Grid>
                            </Label>
                        </Expander.Header>
                    </Expander>-->
                </Grid>
            </TabItem>
            <TabItem Header="NIST Mapping"
                     Style="{StaticResource CustomMetroTabItem}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <DockPanel Grid.Column="0"
                               Margin="0,0,0,5">
                        <Label Content="Vulnerabilities"
                               DockPanel.Dock="Top"
                               Style="{StaticResource TopLevelHeaderStyle}" />
                        <DataGrid Grid.Column="0"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  DockPanel.Dock="Top"
                                  ItemsSource="{Binding Vulnerabilities}"
                                  SelectedItem="{Binding SelectedVulnerability}"
                                  Style="{StaticResource GreyBorderedDataGridStyle}">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn x:Name="nistMappingCheckBoxColumn"
                                                        Width="Auto">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox Margin="5,0,0,0"
                                                      HorizontalAlignment="Center"
                                                      IsChecked="{Binding IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Width="Auto"
                                                    Binding="{Binding Unique_Vulnerability_Identifier}"
                                                    Header="Vulnerability ID"
                                                    HeaderStyle="{StaticResource CustomCenterAlignedDataGridHeaderStyle}"
                                                    IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style BasedOn="{StaticResource MetroTextBlock}"
                                               TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                            <Setter Property="TextWrapping" Value="NoWrap" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Width="*"
                                                    Binding="{Binding Vulnerability_Title}"
                                                    Header="Vulnerability Title"
                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}"
                                                    IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style BasedOn="{StaticResource MetroTextBlock}"
                                               TargetType="TextBlock">
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                            <Setter Property="TextWrapping" Value="NoWrap" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Width="Auto"
                                                    Binding="{Binding Raw_Risk}"
                                                    Header="Raw Risk"
                                                    HeaderStyle="{StaticResource CustomCenterAlignedDataGridHeaderStyle}"
                                                    IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style BasedOn="{StaticResource MetroTextBlock}"
                                               TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                            <Setter Property="TextWrapping" Value="NoWrap" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Width="*"
                                                    Header="Approver"
                                                    HeaderStyle="{StaticResource CustomLeftAlignedDataGridHeaderStyle}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style BasedOn="{StaticResource MetroTextBlock}"
                                               TargetType="TextBlock">
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                            <Setter Property="TextWrapping" Value="NoWrap" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                    <DataGridTextColumn.EditingElementStyle>
                                        <Style BasedOn="{StaticResource HeaderedTextBoxStyle}"
                                               TargetType="TextBox">
                                            <Setter Property="Controls:TextBoxHelper.Watermark" Value="Approver" />
                                            <Setter Property="IsReadOnly" Value="True" />
                                            <Setter Property="Margin" Value="0,5,5,5" />
                                            <Setter Property="vh:DependencyProperties.FloatingWatermarkForeground" Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=DataGridRow}, Path=Foreground}" />
                                        </Style>
                                    </DataGridTextColumn.EditingElementStyle>
                                </DataGridTextColumn>
                                <DataGridTemplateColumn Width="Auto"
                                                        Header="Approved"
                                                        HeaderStyle="{StaticResource CustomCenterAlignedDataGridHeaderStyle}">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox Margin="5,0,0,0"
                                                      HorizontalAlignment="Center"
                                                      IsChecked="{Binding IsChecked}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                            <DataGrid.RowDetailsTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="{Binding ElementName=nistMappingCheckBoxColumn, Path=ActualWidth}" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <DataGrid Grid.Column="1"
                                                  Height="400"
                                                  Margin="0,0,5,5"
                                                  CanUserAddRows="False"
