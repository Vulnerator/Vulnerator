                        <Rectangle Width="100"
                                   Height="100"
                                   Margin="5,0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Top"
                                   Fill="{DynamicResource HighlightBrush}"
                                   RadiusX="50"
                                   RadiusY="50"
                                   Stroke="Transparent"
                                   ToolTip="Highlight Color" />
                        <Label HorizontalAlignment="Center"
                               Content="Highlight Color" />
                    </StackPanel>
                    <StackPanel Width="Auto"
                                Margin="5,0"
